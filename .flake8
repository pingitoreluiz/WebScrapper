[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    env,
    .venv,
    htmlcov,
    .tox,
    dist,
    build,
    *.egg-info

# Ignore specific error codes
ignore = 
    # F401: imported but unused (many are used in type hints or future code)
    F401,
    # E722: bare except (used intentionally for broad error handling)
    E722,
    # F841: local variable assigned but never used (sometimes needed for unpacking)
    F841,
    # W293: blank line contains whitespace (not critical)
    W293,
    # F811: redefinition of unused name (happens with conditional imports)
    F811,
    # E402: module level import not at top (debug/script files)
    E402,
    # F541: f-string missing placeholders (sometimes intentional for consistency)
    F541,
    # W503: line break before binary operator (PEP 8 updated, now acceptable)
    W503,
    # E501: line too long (handled by Black, some exceptions needed)
    E501,
    # F821: undefined name (sometimes from dynamic imports or type checking)
    F821,
    # E712: comparison to True (sometimes explicit is clearer)
    E712,
    # E203: whitespace before ':' (conflicts with Black formatting)
    E203,
    # W291: trailing whitespace (Black handles this)
    W291

# Per-file ignores
per-file-ignores =
    __init__.py:F401
